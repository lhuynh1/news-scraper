<nav>
    <div class="nav-wrapper blue-grey darken-4">
      <a href="#" class="brand-logo">TechCrunch Scraper</a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li><a href="/">Home</a></li>
        <li><a href="/articles">Saved articles</a></li>
        
      </ul>
    </div>
  </nav>

<div class="row">
    <div class="col s12">
      <div class="card card-panel hoverable">
        <div class="card-image">
          <img src="https://images.pexels.com/photos/50711/board-electronics-computer-data-processing-50711.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260" class="s12" id="motherboard">
          <span class="card-title"><h1>Scraping the latest Tech news</h1></span>
        </div>
        
        <div class="card-action center-align">
          <a href="/scrape" class="btn blue-grey darken-4"><i class="material-icons right">forward</i>Fetch New Articles!</a>
        </div>
      </div>
    </div>
  </div>

<div class="articles-section">
{{#each articles}}
<div class="row">
    <div class="col s12">
      <div class="card blue-grey darken-3">
        <div class="card-content white-text center-align">
          <span class="card-title">{{this.title}}</span>
        </div>
        <div class="card-action center-align">
          <a href="{{this.link}}" class="btn blue-grey darken-4">Read the article!</a>
          <form action="/articles/{{this._id}}?_method=PUT" method="POST"><button class="btn blue-grey darken-4" type="submit" name="action">Save me!
            <i class="material-icons right">folder</i>
          </button></form>
        </div>
      </div>
    </div>
  </div>
{{/each}}
  </div>